extends layout

block content

	.team.members#head(style="background-color: #f6f8fa;")
		h2 Mangrove Builders
		p.explanation Mangrove builders are the core of the ecosystem. They are in charge of designing the organizational framework, maintaining the vision and developing the community through ambitious projects.
			each mb,key in members
				.member-card
					.member-imageholder
						a(href="http://twitter.com/#{mb.twitter}", target="_blank")
							.member-image
								img(src="#{mb.image}")
					.member-info
						.member-name-core #{mb.name}
							.member-contribution
								if mb.fire
									.member-ico ðŸ”¥
								if mb.newbie
									.member-ico ðŸŒ±
								.member-points
									if mb.points > 400
										| +400
									else if mb.points > 200
										| +200
									else if mb.points > 100
										| +100
									else if mb.points > 50
										| +50
									else if mb.points > 25
										| +25
									else if mb.points > 10
										| +10
									else if mb.points > 5
										| +5
									else
										| #{mb.points}
									a(href="http://playbook.mangrove.io/how/contribution/#recording-your-contribution-contribution-points-cp-", target="_blank")  cp
						.member-date #{mb.dateOfArrival} â€¢
						.member-place #{mb.currentCity}
						.clear-member
							- var count = 0
							each track,key in mb.tracks
								- count++
									case track
										when 'Architect'
											.track-1
												.member-track #{track}
										when 'Greeter'
											.track-2
												.member-track #{track}
										when 'Speaker'
											.track-3
												.member-track #{track}
										when 'Messenger'
											.track-4
												.member-track #{track}
		div(style="clear:both;")
	.team
		h2 Mangrove Friends
		p.explanation They believe in our vision. We believe in what they do.
		ul#friends

	script(src="scripts/team.js")
	script.
		$(function() {
			var options = {
				elements: !{JSON.stringify(friends)},
				amountToShow: 20,
				timeout: 3500,
				friendsDiv: '#friends'
			};
			var friendSection = new window.FriendsSection(options);
			friendSection.init();
		});
